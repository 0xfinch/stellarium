zoom auto in duration 4.0
wait duration 5.0

//Rotate Moon so that it is visible
flag stop_day_motion 1
timerate rate 100000
wait duration 10.0
timerate rate 1.0
wait duration 5.0

//Move the observer to Moon
set center_fov_ratio 0.0
set home_planet "Moon"
zoom auto out
wait duration 1.5
//Turn Moon landscape on
landscape action load name "Moon" type spherical maptex "\..\..\textures\landscapes\apollo17.png"
flag landscape 1
flag track_object off
wait duration 10.0
flag landscape 0

